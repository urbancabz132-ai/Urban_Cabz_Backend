generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model role {
  id   Int    @id @default(autoincrement())
  name String @unique
  user user[]
}

model user {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password_hash String?
  name          String?
  phone         String?
  role_id       Int?
  created_at    DateTime? @default(now()) @db.Timestamptz(6)
  role          role?     @relation(fields: [role_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  // relations
  bookings      booking[]
  passwordResetOtps PasswordResetOtp[]
}

// Ride booking made by a user (customer).
model booking {
  id              Int        @id @default(autoincrement())
  user_id         Int

  pickup_location String
  drop_location   String

  // Optional: scheduled time (for later bookings)
  scheduled_at    DateTime?  @db.Timestamptz(6)

  // Calculated values
  distance_km     Float?
  estimated_fare  Float?
  total_amount    Float

  // Booking lifecycle: PENDING_PAYMENT, PAID, CANCELLED, COMPLETED
  status          String     @default("PENDING_PAYMENT")

  // Taxi assignment lifecycle for this booking: NOT_ASSIGNED, ASSIGNED, ON_TRIP, COMPLETED, CANCELLED
  taxi_assign_status String  @default("NOT_ASSIGNED")

  created_at      DateTime?  @default(now()) @db.Timestamptz(6)
  updated_at      DateTime?  @updatedAt @db.Timestamptz(6)

  // relations
  user            user       @relation(fields: [user_id], references: [id], onDelete: Cascade)
  payments        payment[]
  assign_taxis    assign_taxi[]
}

// Payment attempts/records for a booking (e.g. Stripe/Razorpay, etc.)
model payment {
  id              Int        @id @default(autoincrement())
  booking_id      Int
  amount          Float
  currency        String      @default("INR")

  // Remaining amount to be paid (for partial payments)
  // If amount = 100 and booking.total_amount = 260, then remainingAmount = 160
  remaining_amount Float?    @default(0)

  // status example: CREATED, SUCCESS, FAILED, REFUNDED
  status          String

  provider        String      // e.g. "stripe", "razorpay", "cash"
  provider_txn_id String?     @unique

  created_at      DateTime?   @default(now()) @db.Timestamptz(6)

  // relations
  booking         booking     @relation(fields: [booking_id], references: [id], onDelete: Cascade)
}

// Admin-side assignment of a taxi/driver to a confirmed (paid) booking.
model assign_taxi {
  id           Int      @id @default(autoincrement())
  booking_id   Int

  driver_name   String
  driver_number String
  cab_number    String
  cab_name      String

  created_at   DateTime? @default(now()) @db.Timestamptz(6)
  updated_at   DateTime? @updatedAt @db.Timestamptz(6)

  // relations
  booking      booking  @relation(fields: [booking_id], references: [id], onDelete: Cascade)
}

model PasswordResetOtp {
  id         Int       @id @default(autoincrement())
  user_id    Int
  otp_hash   String
  expires_at DateTime  @db.Timestamptz(6)
  verified   Boolean   @default(false)
  attempts   Int       @default(0)
  created_at DateTime? @default(now()) @db.Timestamptz(6)

  user user @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([expires_at])
}