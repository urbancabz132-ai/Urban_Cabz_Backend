generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model role {
  id   Int    @id @default(autoincrement())
  name String @unique
  user user[]
}

model user {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password_hash String?
  name          String?
  phone         String?
  role_id       Int?
  created_at    DateTime? @default(now()) @db.Timestamptz(6)
  role          role?     @relation(fields: [role_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  // relations
  bookings      booking[]
  passwordResetOtps PasswordResetOtp[]
}

// Ride booking made by a user (customer).
model booking {
  id              Int        @id @default(autoincrement())
  user_id         Int

  pickup_location String
  drop_location   String

  // Optional: scheduled time (for later bookings)
  scheduled_at    DateTime?  @db.Timestamptz(6)

  // Calculated values
  distance_km     Float?
  estimated_fare  Float?
  total_amount    Float

  // NEW: Actual trip values (entered by admin after trip)
  actual_km       Float?
  extra_km        Float?
  extra_charge    Float?

  // Booking lifecycle: PENDING_PAYMENT, PAID, CANCELLED, COMPLETED, IN_PROGRESS
  status          String     @default("PENDING_PAYMENT")

  // NEW: Cancellation reason (saved when admin cancels)
  cancellation_reason String?

  // Taxi assignment lifecycle for this booking: NOT_ASSIGNED, ASSIGNED, ON_TRIP, COMPLETED, CANCELLED
  taxi_assign_status String  @default("NOT_ASSIGNED")

  car_model       String?    // To store selected car model (Hycross, etc.)

  created_at      DateTime?  @default(now()) @db.Timestamptz(6)
  updated_at      DateTime?  @updatedAt @db.Timestamptz(6)

  // relations
  user            user       @relation(fields: [user_id], references: [id], onDelete: Cascade)
  payments        payment[]
  assign_taxis    assign_taxi[]
}

// Payment attempts/records for a booking (e.g. Stripe/Razorpay, etc.)
model payment {
  id              Int        @id @default(autoincrement())
  booking_id      Int
  amount          Float
  currency        String      @default("INR")

  // status example: CREATED, SUCCESS, FAILED, REFUNDED
  status          String

  provider        String      // e.g. "stripe", "razorpay", "cash"
  provider_txn_id String?     @unique

  // Remaining amount after this payment (for partial payments)
  remaining_amount Float?

  created_at      DateTime?   @default(now()) @db.Timestamptz(6)

  // relations
  booking         booking     @relation(fields: [booking_id], references: [id], onDelete: Cascade)
}

// Admin-side assignment of a taxi/driver to a confirmed (paid) booking.
model assign_taxi {
  id           Int      @id @default(autoincrement())
  booking_id   Int

  driver_name   String
  driver_number String
  cab_number    String
  cab_name      String

  created_at   DateTime? @default(now()) @db.Timestamptz(6)
  updated_at   DateTime? @updatedAt @db.Timestamptz(6)

  // relations
  booking      booking  @relation(fields: [booking_id], references: [id], onDelete: Cascade)
}

model PasswordResetOtp {
  id         Int       @id @default(autoincrement())
  user_id    Int
  otp_hash   String
  expires_at DateTime  @db.Timestamptz(6)
  verified   Boolean   @default(false)
  attempts   Int       @default(0)
  created_at DateTime? @default(now()) @db.Timestamptz(6)

  user user @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([expires_at])
}

// Internal notes for bookings (Admin communication)
model booking_note {
  id          Int       @id @default(autoincrement())
  booking_id  Int
  admin_id    Int
  content     String
  created_at  DateTime? @default(now()) @db.Timestamptz(6)

  @@index([booking_id])
}

// Fare adjustments for extra charges (tolls, extra KM, waiting)
model fare_adjustment {
  id          Int       @id @default(autoincrement())
  booking_id  Int
  type        String    // EXTRA_KM, TOLL, WAITING, TAX, DISCOUNT, OTHER
  amount      Float
  description String?
  admin_id    Int
  created_at  DateTime? @default(now()) @db.Timestamptz(6)

  @@index([booking_id])
}

// Audit trail for all admin actions
model audit_log {
  id          Int       @id @default(autoincrement())
  entity_type String    // BOOKING, PAYMENT, FLEET, USER
  entity_id   Int
  action      String    // CREATE, UPDATE, DELETE, STATUS_CHANGE, CANCEL
  old_value   String?   // JSON of previous state
  new_value   String?   // JSON of new state
  admin_id    Int
  reason      String?   // Optional reason for the action
  created_at  DateTime? @default(now()) @db.Timestamptz(6)

  @@index([entity_type, entity_id])
  @@index([admin_id])
}
